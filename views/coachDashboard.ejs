<!DOCTYPE html>
<html>

<head>
    <script>
        function displayMems(classno) {
            if (classno == 1) {
                document.getElementById("memlist1").style = "display: body";
                document.getElementById("1class").innerHTML = "Hide Members";
                document.getElementById("1class").onclick = function () { hideMems(1); };
            }
            else if (classno == 2) {
                document.getElementById("memlist2").style = "display: body";
                document.getElementById("2class").innerHTML = "Hide Members";
                document.getElementById("2class").onclick = function () { hideMems(2); };
            }
            else if (classno == 3) {
                document.getElementById("memlist3").style = "display: body";
                document.getElementById("3class").innerHTML = "Hide Members";
                document.getElementById("3class").onclick = function () { hideMems(3); };
            }
        }
        function hideMems(classno) {
            if (classno == 1) {
                document.getElementById("memlist1").style = "display: none";
                document.getElementById("1class").innerHTML = "View Members";
                document.getElementById("1class").onclick = function () { displayMems(1); };
            }
            else if (classno == 2) {
                document.getElementById("memlist2").style = "display: none";
                document.getElementById("2class").innerHTML = "View Members";
                document.getElementById("2class").onclick = function () { displayMems(2); };
            }
            else if (classno == 3) {
                document.getElementById("memlist3").style = "display: none";
                document.getElementById("3class").innerHTML = "View Members";
                document.getElementById("3class").onclick = function () { displayMems(3); };
            }
        }
    </script>
    <title>Dashboard</title>
    <style>
         header {
            background-color: #212A3E;
            width: 20%;
            border-radius: 10px;
            color: #F6ECA9;
            text-align: center;
            padding: 10px;
            margin: 3% auto 2%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .logo-right {
            position: absolute;
            top: 10px; /* Adjust the top position as needed */
            left: 10px; /* Adjust the left position as needed */
            height: auto;
            width: 150px; /* Adjust the width as needed */
            z-index: 999; /* Ensure the logo appears above other elements */
        }

        body {
            background-color: #F1F6F9;
            color: #F6ECA9;
            font-family: Arial, sans-serif;
        }

        .containerLeft {
            float: left;
            width: 45%;
            margin-left: 2%;
            background-color: #212A3E;
            padding: 20px;
            border-radius: 8px;
        }

        .containerRight {
            float: right;
            width: 45%;
            margin-right: 2%;
            margin-top: 2%;
            background-color: #212A3E;
            padding: 20px;
            border-radius: 8px;
        }

        .highlight {
            color: #F6ECA9;
        }

        .card {
            background-color: #394867;
            margin: 10px;
            padding: 10px;
            border-radius: 8px;
        }

        .payment-window {
            background-color: #394867;
            margin: 10px;
            padding: 10px;
            border-radius: 8px;
        }

        



        .btn {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 15px 30px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
        }

        .btn:hover {
            background-color: #45a049;
        }

        label {
            color: #F6ECA9;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"] {
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ccc;
            background-color: #fff;
            color: #333;
            width: calc(100% - 18px);
            margin-bottom: 10px;
        }

        .auth-buttons {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        .auth-buttons button {
            margin-left: 5px;
        }
    </style>

</head>

<body>
    <header>
        <h1>Welcome, Coach!</h1>
        <div class="auth-buttons">
            <button class="btn" id="loginBtn">Login</button>
            <button class="btn" id="registerBtn">Register</button>
        </div>
    </header>
    <div class="containerLeft">
        <div class="main-container">
            <h1 class="highlight">Class Management System</h1>
            <div class="card">

                <h2>Class 1</h2>
                <p>Class details...</p>
                <button id="1class" onclick="displayMems(1)" type="button" class="btn ">View Members</button>
                <fieldset id="memlist1" style="display: none">
                    <div>
                        <input type="checkbox" id="mem1" checked />
                        <label for="mem1">Member 1</label>
                    </div>
                    <div>
                        <input type="checkbox" id="mem2" checked />
                        <label for="mem2">Member 2</label>
                    </div>
                    <div>
                        <input type="checkbox" id="mem3" />
                        <label for="mem3">Member 3</label>
                    </div>
                </fieldset>
                <button type="button" class="btn ">Teach Class</button>
            </div>
            <div class="card">
                <h2>Class 2</h2>
                <p>Class details...</p>
                <button id="2class" onclick="displayMems(2)" type="button" class="btn ">View Members</button>
                <fieldset id="memlist2" style="display: none">
                    <div>
                        <input type="checkbox" id="mem1" checked />
                        <label for="mem1">Member 1</label>
                    </div>
                    <div>
                        <input type="checkbox" id="mem2" checked />
                        <label for="mem2">Member 2</label>
                    </div>
                    <div>
                        <input type="checkbox" id="mem3" />
                        <label for="mem3">Member 3</label>
                    </div>
                </fieldset>
                <button type="button" class="btn ">Teach Class</button>
            </div>
            <div class="card">
                <h2>Class 3</h2>
                <p>Class details...</p>
                <button id="3class" onclick="displayMems(3)" type="button" class="btn ">View Members</button>
                <fieldset id="memlist3" style="display: none">
                    <div>
                        <input type="checkbox" id="mem1" checked />
                        <label for="mem1">Member 1</label>
                    </div>
                    <div>
                        <input type="checkbox" id="mem2" checked />
                        <label for="mem2">Member 2</label>
                    </div>
                    <div>
                        <input type="checkbox" id="mem3" />
                        <label for="mem3">Member 3</label>
                    </div>
                </fieldset>
                <button type="button" class="btn ">Teach Class</button>
            </div>
        </div>

    </div>
    <div class="containerRight">
        <img src="https://cdn.discordapp.com/attachments/1214014972955463750/1227401363902828616/scuffed_background.png?ex=66284599&is=6615d099&hm=d9368342a131b03ee54642b35759451ec129f2ec61901799d10cc21d09ea0a09&"
            alt="Your Logo" class="logo-right">
        <div class="main-container">
            <h1 class="highlight">Payment</h1>
            <div class="card">
                <h2>Class Taught In This Month: </h2>
                <h2>Next Class: </h2>
            </div>
        </div>

    </div>
    <div class="containerRight">
        <div class="main-container">
            <h1 class="highlight">Send Message To All Memebers:</h1>
            <div class="card">
                <form action="/sendMessage" method="POST"> <!-- Add form with action and method -->
                    <h2>Message: </h2>
                    <textarea name="message" rows="4" cols="50"></textarea> <!-- Add name attribute to textarea -->
                    <br>
                    <button type="submit" class="btn">Send</button> <!-- Change button type to submit -->
                </form>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("loginBtn").addEventListener("click", function () {
                window.location.href = "/";
        });

        document.getElementById("registerBtn").addEventListener("click", function () {
                window.location.href = "/register";
        });
    </script>

</body>

</html>